#Print numbers from 1 to N using recursion 

 void printNos(int N)
    {
         if(N==0)
         return;
    
         printNos(N-1);
         cout<<N<<" ";
   }
   
   
 #Print numbers from N to 1 using recursion 
 
 void printNos(int N)
    {
         if(N==0)
         return;
    
          cout<<N<<" ";
         printNos(N-1);
        
   }
